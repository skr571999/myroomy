extends ./../parts/_layout.pug

block content
	div.allRoomContainer
		div.row.mx-2
			each room in rooms
				a(href="/room/"+ room._id).col-12.mx-auto.my-3
					div.bg-white.row
						.col-5.p-0
							img.img-fluid(src="/room/"+room._id+"/photo", alt="Image")
						.col-7.py-2.row.px-0
							div.col-12.px-2
								h4 #{room.location}
							div.col-12.px-2.facilities Facilities:
								ul.list-inline.m-0.d-inline
									each feature in room.features
										li.list-inline-item.text-capitalize #{feature},
							if user
								div.col-12.px-2
									- let status = room.status === true?'Available':'Not Available'
									p.text-muted.m-0 Status : #{status}
							div.col-12.px-2.infoContainer
								p.m-0 Price: #{room.price} / #{room.persons} Person
							