extends ./../parts/_layout.pug

block content
	div.signupContainer.p-3.bg-white.rounded
		h4.text-muted.text-center.mb-4.mt-3 Signup
		div.row
			form(action='/user/add' method='post' enctype="multipart/form-data").col-10.col-md-8.mx-auto.pl-0
				div.form-group
					label(for="userID") UserID
					input.ml-3(type="text" name='userid' value=userid?userid:'' class="form-control" id="userID" aria-describedby="emailHelp" placeholder="Enter userid" required)
					small.ml-4(id="emailHelp" class="form-text text-muted") Choose a unique UserID.
				div.form-group
					label(for="email") Email
					input.ml-3(type='email' name='email' value=email?email:'' class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter Email" required)
				div.form-group
					label(for="name") Name
					input.ml-3(type='text' name='name' value=name?name:'' class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter Name" maxlength='25' required)
				div.form-group
					p Choose Gender
					div.ml-4
						div.form-check.form-check-inline
							input(type="radio" name="gender" class="form-check-input" id="male" value="male" required)
							label(for="male").form-check-label Male
						div.form-check.form-check-inline
							input(type="radio" name="gender" class="form-check-input" id="female" value="female" required)
							label(for="female").form-check-label Female
						div.form-check.form-check-inline
							input(type="radio" name="gender" class="form-check-input" id="other" value="other" required)
							label(for="other").form-check-label Other
				div.form-group
					label(for="mobileNumber") Mobile Number
					input.ml-3(type='number' name='mobileNumber' value=mobileNumber?mobileNumber:'' class="form-control" id="mobileNumber" aria-describedby="emailHelp" placeholder="Enter Mobile Number" maxlength='10' required)
				div.form-group
					label(for="address") Address
					textarea.ml-3(name='address' class="form-control" id="address" rows="3" placeholder="e.g. Bijnor" required)
				//- div.form-group
				//- 	label(for="addharNumber") Addhar Number
				//- 	input.ml-3(type='number' name='addharNumber' value=addharNumber?addharNumber:'' class="form-control" id="addharNumber" aria-describedby="emailHelp" placeholder="e.g. 123412341234" required)
				div.form-group
					label(for="photo") Add a Photo
					input.ml-3(type="file" id='photo' name="photo" accept="image/*" class='form-control-file')
				div.form-group
					label(for="password1") Password
					input.ml-3(type="password" name='password'  value=password?password:'' class="form-control" id="password1" placeholder="Password" required)
				div.row.justify-content-around.mt-5.mb-3
					input.btn.btn-primary(type='submit' value='Submit')
