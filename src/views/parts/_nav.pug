nav.navContainer
	div.navIcon
		<i class="material-icons md-36 navOperIcon">menu</i>	
	div.mainLogo
		a(href="/")
			img(src="/images/logo.png", alt="logo")
	div.navLinks.d-none
		ul
			li
				a(href="/") Home 
			if user
				li
					a(href="/user") Profile
			if user && user.userid === 'admin'
				li
					a(href="/room/new") Add Room
				li
					a(href="/user/all") All Users
	div.userAction
		ul
			if user
				li
					img.userAvtar.mr-2(src="/user/"+user.userid+"/photo" alt="Photo")
				li
					a.btn.btn-outline-primary.btn-sm(href="/logout") Logout
			else
				if title !== 'Login'
					li
						a.btn.btn-outline-primary.btn-sm.mr-2(href="/login") Login
				if title !== "Sign Up"
					li
						a.btn.btn-outline-primary.btn-sm(href="/signup") Signup